<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/nen_16"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/ledanme"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Thêm Người dùng "
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#8692F7"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/add_tenDN"
                android:background="@drawable/ledanme"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint=" Tên đăng nhập"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/baseline_lock_24"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/add_hoTen"
                android:background="@drawable/ledanme"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="Họ và tên"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/add_pass"
                android:background="@drawable/ledanme"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/add_nhapLaiPass"
                android:background="@drawable/ledanme"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="Nhập lại Pass"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="30dp"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Lưu"
                    android:id="@+id/add_luu"
                    android:textSize="18sp"
                    android:backgroundTint="#8692F7"
                    android:layout_marginRight="20dp"
                    app:cornerRadius="20dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Hủy"
                    android:id="@+id/add_huy"
                    android:textSize="18sp"
                    android:backgroundTint="#8692F7"
                    app:cornerRadius="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>